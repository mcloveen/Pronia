
@model List<Category>

<a asp-controller="Category" asp-action="Create" class="btn btn-success">Create</a>
<table class="table table-dark mt-2">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th> 
            <th colspan="2">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Category category in Model ?? new List<Category>())
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.Name</td>
                <td></td>
                <td></td>
            </tr>
        }
    </tbody>
</table>